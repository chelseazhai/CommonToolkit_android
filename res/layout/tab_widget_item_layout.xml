<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/tabWidget_item_relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/tab_widget_item_bg"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp" >

        <ImageView
            android:id="@+id/tabWidget_item_iconImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/ct_tabWidget_itemIcon_imageView_content_description" />

        <TextView
            android:id="@+id/tabWidget_item_labelTextView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tabWidget_item_iconImgView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="1dp"
            android:singleLine="true"
            android:textColor="@drawable/tab_widget_item_text_color" />
    </RelativeLayout>

</FrameLayout>